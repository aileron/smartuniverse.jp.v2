<!doctype html>
<html id='html'>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="user-scalable=no">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <%= stylesheet_link_tag "normalize", "main" %>
    <%= javascript_include_tag  "all" %>

  </head>

  <body class="<%= page_classes %>">
    <%= yield %>

    <% if @lang == :ja %>
        <a id="lang" href="/en">English</a>
    <% else %>
        <a id="lang" href="/">Japanese</a>
    <% end %>

    <div style="position: fixed;bottom: 10px;right:50px">
        <script>
        document.write('<p>横のサイズ：<strong>' + screen.width + '</strong>');
        document.write('（表示可能領域：<strong>' + screen.availWidth + '</strong>）<br>');
        document.write('縦のサイズ：<strong>' + screen.height + '</strong>');
        document.write('（表示可能領域：<strong>' + screen.availHeight + '</strong>）</p>');
        </script>
    </div>

  </body>

</html>
